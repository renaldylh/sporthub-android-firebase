{
    "info": {
        "name": "SportHub API",
        "description": "API Collection for Banyumas SportHub",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api"
        },
        {
            "key": "token",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/health",
                "description": "Check if API is running"
            }
        },
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/auth/register",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/auth/login",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@sporthub.com\",\n  \"password\": \"admin123\"\n}"
                        }
                    }
                },
                {
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/auth/profile",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "Products",
            "item": [
                {
                    "name": "Get All Products",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/products"
                    }
                },
                {
                    "name": "Get Product by ID",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/products/:productId"
                    }
                },
                {
                    "name": "Create Product (Admin)",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/products",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"New Product\",\n  \"price\": 100000,\n  \"stock\": 10,\n  \"description\": \"Product description\"\n}"
                        }
                    }
                },
                {
                    "name": "Update Product (Admin)",
                    "request": {
                        "method": "PUT",
                        "url": "{{baseUrl}}/products/:productId",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Updated Name\",\n  \"price\": 150000\n}"
                        }
                    }
                },
                {
                    "name": "Delete Product (Admin)",
                    "request": {
                        "method": "DELETE",
                        "url": "{{baseUrl}}/products/:productId",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "Orders",
            "item": [
                {
                    "name": "Create Order",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/orders",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"items\": [\n    {\n      \"productId\": \"product-id-here\",\n      \"name\": \"Sepatu Olahraga\",\n      \"price\": 450000,\n      \"quantity\": 1\n    }\n  ],\n  \"totalAmount\": 450000,\n  \"shippingAddress\": \"Jl. Contoh No. 1\",\n  \"paymentMethod\": \"transfer\"\n}"
                        }
                    }
                },
                {
                    "name": "Get My Orders",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/orders/me",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get All Orders (Admin)",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/orders",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Update Order Status (Admin)",
                    "request": {
                        "method": "PATCH",
                        "url": "{{baseUrl}}/orders/:orderId/status",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"status\": \"processing\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Users (Admin)",
            "item": [
                {
                    "name": "Get All Users",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/users",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Update User Role",
                    "request": {
                        "method": "PATCH",
                        "url": "{{baseUrl}}/users/:userId/role",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"role\": \"admin\"\n}"
                        }
                    }
                }
            ]
        }
    ]
}